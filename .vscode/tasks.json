{
    "tasks": 
    [
        {
            "type": "cppbuild",
            "label": "Build pkg",
            "command": "cd PackageManager && cmake . && make",
            "options": {
                "cwd": "${workspaceFolder}/PackageManager"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "process",
            "label": "Launch pkg",
            "command": "./pkg",
            "options": {
                "cwd": "${workspaceFolder}/PackageManager"
            },
            "dependsOn": "Build pkg"
        }
    ],
    "version": "2.0.0"
}